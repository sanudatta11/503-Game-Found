{
  "manifest_version": 2,
  "update_url": "https://clients2.google.com/service/update2/crx",
  "author" : "Soumyajit Dutta || Biswarup Banerjee",
  "name": "503 Game Found",
  "short_name": "503 Game",
  "description": "This is a addon/extension for Google Chrome and Mozilla Firefox for playing games in new tab during your Internet Disconectivity.",
  "version": "0.1",
  "browser_action": {
        "default_icon": {
            "19": "assets/images/logo-default.png",
            "38": "assets/images/logo-default.png"
        },
        "default_popup": "popup.html"
    },
  "icons": {
    "16": "assets/images/logo-default.png",
    "48": "assets/images/logo-default.png",
    "128": "assets/images/logo-default.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*",
    "chrome://favicon/*",
    "activeTab",
    "https://ajax.googleapis.com/",
    "contextMenus",
    "cookies"
  ],
  "background": {
    "scripts": [
      "js/background.js",
      "js/settings.js"
    ]
  }
}