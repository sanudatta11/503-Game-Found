{
  "manifest_version": 2,
  "update_url": "https://clients2.google.com/service/update2/crx",
  "author" : "Soumyajit Dutta || Biswarup Banerjee",
  "name": "503 Game Found",
  "short_name": "503 Game",
  "description": "This is a addon/extension for Google Chrome and Mozilla Firefox for playing games in new tab during your Internet Disconectivity.",
  "version": "0.1",
  "browser_action": {
        "default_icon": {
            "19": "",
            "38": ""
        },
        "default_popup": "popup.html"
    },
  "icons": {
    "16": "",
    "48": "",
    "128": ""
  },
  "permissions": [
    "storage",
    "tabs",
    "history",
    "http://*/*",
    "https://*/*",
    "chrome://favicon/*",
    "activeTab",
    "https://ajax.googleapis.com/",
    "contextMenus",
    "cookies"
  ],
  "background": {
    "scripts": ["js/background.js"]
  }
}